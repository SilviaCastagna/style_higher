<h1> Confirm your choice </h1>
<p>
  <strong>Title:</strong>
  <%= @item.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @item.description %>
</p>

<p>
  <strong>Brand:</strong>
  <%= @item.brand %>
</p>

<p>
<strong>Price:</strong>
<%= @item.price %> $
</p>

<p>
  <strong>User email:</strong>
  <%= @item.user.email %>
</p>


<div class="container">
  <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
  
    <%= simple_form_for @booking, url: item_bookings_path(@item), method: "Post", remote: true do |f| %>
      <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.button :submit, "Book now", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>