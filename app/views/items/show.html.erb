<div class="container" style="width: 400px; margin: 0 auto;">

  <h1 class="mb-3 mt-2"> <%= @item.title %></h1>

    <%= cl_image_tag @item.photo.key, height: 300, width: 400, crop: :fill %>

    <p>
     <br>
      <strong class="mt-5">Description:</strong>
      <%= @item.description %>
    </p>

    <p>
      <strong>Brand:</strong>
      <%= @item.brand %>
    </p>

    <p>
      <strong>Price:</strong>
      <%= @item.price %> $
    </p>

    <p>
      <strong>User contact:</strong>
      <%= @item.user.email %>
    </p>

</div>

  <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
    <%= simple_form_for @booking, url: item_bookings_path(@item), method: "Post", remote: true do |f| %>
      <%= f.input :start_date, as: :date, required: false, input_html: {class: "datepicker"} %>
      <%= f.input :end_date, as: :date, required: false, input_html: {class: "datepicker"} %>
      <%= f.button :submit, "Book now", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
