<h1>Items#index</h1>
<p>Find me in app/views/items/index.html.erb</p>

<table>
  <thead>
    <tr>
      <th>title</th>
      <th>description</th>
      <th>brand</th>
      <th>user</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.description %></td>
        <td><%= item.brand %></td>
        <td><%= item.user.id %></td>
        <td><%= link_to 'Show', item, class: "btn btn-success"%></td>
        </tr>
    <% end %>
  </tbody>
</table>
