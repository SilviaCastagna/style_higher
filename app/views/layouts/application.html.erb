<!DOCTYPE html>
<html>
  <head>
    <title>StyleHigher</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>

    <meta charset="utf-8">
    <link rel="stylesheet" href="style.css">
  </head>

  <body>

<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">

  <%= link_to image_tag('logo.png'), root_path, class: "navbar-image"%>

  <%= form_tag items_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Search for cool stuff"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>


  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
     <%= link_to "Upload", new_item_path, class: "nav-link"%>
      </li>
      <li class="nav-item">
        <%= link_to "Discover", items_path(), class: "nav-link"%>
      </li>
      <li class="nav-item dropdown">
      <%= image_tag 'logo.png', class: 'avatar dropdown-toggle', id: 'navbarDropdown', data: {toggle: 'dropdown'}, 'aria-haspopup': true, 'aria-expanded': false    %>
        <%# <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="../../app/assets/images/logo.png" alt="user avatar" /> %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
        <% if current_user  %>
          <%= link_to "Show Bookings", dashboard_path, class: "dropdown-item" %>
          <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        <% else %>
          <%= link_to "Log In", new_user_session_path, class: "dropdown-item" %>
        <% end %>

        </div>
      </li>
    </ul>
  </div>
</div>

    <%= yield %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

</body>


</html>
